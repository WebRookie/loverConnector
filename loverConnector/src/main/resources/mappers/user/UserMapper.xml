<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rookie.loverconnector.user.dao.UserMapper">

    <select id="getUserByOpenId" resultType="com.rookie.loverconnector.user.vo.UserVO">
        select
            user_id as userId,
            nickname,
            phone,
            is_related as isRelated,
            create_date as createDate
        from user where open_id = #{openId}
    </select>
</mapper>